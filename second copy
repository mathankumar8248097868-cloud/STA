4.pay

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import java.time.Duration;

public class PaymentTest {

    public static void main(String[] args) {

        ChromeOptions options = new ChromeOptions();
        options.addArguments("--remote-allow-origins=*");

        WebDriver driver = new ChromeDriver(options);
        driver.manage().window().maximize();
        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(20));

        try {

            driver.get("https://mathankumar8248097868-cloud.github.io/staweb/index.html");

            // Login
            wait.until(ExpectedConditions.elementToBeClickable(By.linkText("Login"))).click();

            wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("username")))
                    .sendKeys("mathan");

            driver.findElement(By.id("password")).sendKeys("1234");
            driver.findElement(By.tagName("button")).click();

            Thread.sleep(2000);

            // Add Product
            wait.until(ExpectedConditions.elementToBeClickable(
                    By.xpath("(//button[contains(text(),'Add')])[1]"))).click();

            Thread.sleep(1500);

            // Go to Cart
            wait.until(ExpectedConditions.elementToBeClickable(By.linkText("Cart"))).click();

            Thread.sleep(1500);

            // Checkout
            wait.until(ExpectedConditions.elementToBeClickable(By.linkText("Checkout"))).click();

            Thread.sleep(1500);

            // Payment
            wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("cardnumber")))
                    .sendKeys("1234");

            driver.findElement(By.id("cvv")).sendKeys("1234");
            driver.findElement(By.tagName("button")).click();

            Thread.sleep(2000);

            String page = driver.getPageSource().toLowerCase();

            if (page.contains("success")) {
                System.out.println("✅ PAYMENT SUCCESSFUL");
            } else {
                System.out.println("❌ PAYMENT FAILED");
            }

        } catch (Exception e) {
            System.out.println("❌ PAYMENT ERROR");
        }

        driver.quit();
    }
}

